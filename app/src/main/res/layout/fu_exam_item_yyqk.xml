<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <net.greatsoft.main.view.FuTextView
        android:id="@+id/tv_drugName"
        style="@style/exam_list_title"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small"
        android:text="药物名称" />

    <net.greatsoft.main.view.FuTextView
        android:id="@+id/tv_drugUsageCode"
        android:textColor="@color/black"
        style="@style/exam_list_title"
        android:textSize="@dimen/font_small"
        android:text="用法" />

    <net.greatsoft.main.view.FuTextView
        android:id="@+id/tv_drugDose"
        style="@style/exam_list_title"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small"
        android:text="用量" />

    <net.greatsoft.main.view.FuTextView
        android:id="@+id/tv_drugTime"
        style="@style/exam_list_title"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small"
        android:text="用药时间" />

    <net.greatsoft.main.view.FuTextView
        android:id="@+id/tv_drugComplianceValue"
        style="@style/exam_list_title"
        android:textSize="@dimen/font_small"
        android:textColor="@color/black"
        android:text="服药依从性" />

    <net.greatsoft.main.view.FuTextView
        android:id="@+id/tv_delete"
        style="@style/exam_list_title"
        android:layout_weight="0"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small"
        android:layout_width="60dp"
        android:text="操作" />

</LinearLayout>
