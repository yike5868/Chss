<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:id="@+id/dialog"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="20dip"
        android:orientation="horizontal" >

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="药品"
            android:textColor="@color/black" />

        <net.greatsoft.main.view.FuEditText
            android:id="@+id/m_input_med"
            style="?android:attr/textViewStyle"
            android:layout_width="155dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="2dip"
            android:singleLine="true"
            android:textColor="@color/black" />

        <net.greatsoft.main.view.FuImageView
            android:id="@+id/m_btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dip"
            android:src="@mipmap/btn_search" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_med"
        android:layout_width="wrap_content"
        android:layout_height="200dip" >
    </ListView>

</LinearLayout>