<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <include layout="@layout/fu_public_title_layout"/>

    <!--  老年人花名册(专档)  -->
    <!-- 基本信息 -->
    <ScrollView
        android:id="@+id/parent_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 姓名 -->
            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="姓        名"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_name"
                    style="@style/public_input_edit"/>

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="性别"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_sex"
                    style="@style/public_input_edit"/>
            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="出生日期"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_birthDate"
                    style="@style/public_input_edit"/>

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="婚姻状况"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_hunyin"
                    style="@style/public_input_edit"
                    android:focusable="false"/>
            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="固定电话"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_gudingTel"
                    style="@style/public_input_edit"/>

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="移动电话"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_yidongTel"
                    style="@style/public_input_edit"
                    android:focusable="false"/>
            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="家庭地址"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_adress"
                    style="@style/public_input_edit_single"/>

            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="赡养方式"/>

                <LinearLayout
                    android:id="@+id/ll_maintenanceModeCode"
                    style="@style/public_input_layout_single"/>

            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:layout_width="80dp"
                    android:text="纳入管理日期*"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_manageDate"
                    style="@style/public_input_edit_single"
                    android:layout_width="240dp"/>

            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="监护人姓名"/>

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_guardianName"
                    style="@style/public_input_edit"
                    app:maxByteLength="100"/>

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="与本人关系*"/>

                <Spinner
                    android:id="@+id/sp_guardianRelationCode"
                    style="@style/public_input_edit"/>
            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="固定电话"/>

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_guardianTelNo"
                    style="@style/public_input_edit"
                    app:maxByteLength="30"/>

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="移动电话"/>

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_guardianMobile"
                    style="@style/public_input_edit"
                    app:maxByteLength="30"/>
            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="备注"/>

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_remarks"
                    style="@style/public_input_edit_single"
                    app:maxByteLength="500"/>

            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

            <LinearLayout
                style="@style/public_info_layout">

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="被调查者"/>

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_informant"
                    style="@style/public_input_edit"
                    app:maxByteLength="100"/>

                <net.greatsoft.main.view.FuTextView
                    style="@style/public_input_title"
                    android:text="调查时间"/>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_investigatorDate"
                    style="@style/public_input_edit"/>
            </LinearLayout>

            <include layout="@layout/fu_view_horizontal"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>