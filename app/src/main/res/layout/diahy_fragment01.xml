<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFF0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
             android:id="@+id/cb_hyperSymptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:text="无症状"
            android:textColor="#25B300"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/ll_hyperSymptom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cb_diabetesSymptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:text="无症状"
            android:textColor="#25B300"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/ll_diabetesSymptom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <include layout="@layout/fu_view_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal" >

        <net.greatsoft.main.view.FuTextView
            style="@style/text_diahy"
            android:text="日吸烟量" />

        <net.greatsoft.main.view.FuEditText
            android:id="@+id/et_dailySmoking"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:digits="0123456789"
            android:inputType="number"
            fu:maxByteLength="3"
            android:nextFocusForward="@+id/f_smoke1"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuEditText
            android:id="@+id/et_aimDailySmoking"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:digits="0123456789"
            android:inputType="number"
            fu:maxByteLength="3"
            android:nextFocusForward="@+id/d_e_drink"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="(支)"
            android:textSize="16sp" />

        <net.greatsoft.main.view.FuTextView
            android:id="@+id/tv_o_dailySmoking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="8"
            android:textColor="#878787"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:text="/"
            android:textColor="#878787"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:id="@+id/tv_o_aimDailySmoking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:nextFocusForward="@+id/et_o_smoke"
            android:text="8"
            android:textColor="#878787"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal" >

        <net.greatsoft.main.view.FuTextView
            style="@style/text_diahy"
            android:text="日饮酒量" />

        <net.greatsoft.main.view.FuEditText
            android:id="@+id/et_dailyDrinking"
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/d_e_drink1"
            android:digits="0123456789"
            android:inputType="number"
            fu:maxByteLength="3"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuEditText
            android:id="@+id/et_aimDailyDrinking"
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:digits="0123456789"
            android:inputType="number"
            fu:maxByteLength="3"
            android:nextFocusForward="@+id/d_e_campaign_times_week"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="(两)"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:id="@+id/tv_o_dailyDrinking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="8"
            android:textColor="#878787"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textColor="#878787"
            android:textSize="18sp" />

        <net.greatsoft.main.view.FuTextView
            android:id="@+id/tv_o_aimDailyDrinking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="12"
            android:textColor="#878787"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <net.greatsoft.main.view.FuTextView
            style="@style/text_diahy"
            android:layout_gravity="center_vertical"
            android:text="运动" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:orientation="horizontal" >

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_exerciseDurationWeeks"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:digits="0123456789"
                    android:inputType="number"
                    fu:maxByteLength="3"
                    android:nextFocusForward="@+id/f_campaign_minutes"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="次/周"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_exerciseDurationMins"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:digits="0123456789"
                    android:inputType="number"
                    fu:maxByteLength="3"
                    android:nextFocusForward="@+id/d_e_campaign_times_week1"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="分钟/次"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:orientation="horizontal" >

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_aimDurationWeeks"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:digits="0123456789"
                    android:inputType="number"
                    fu:maxByteLength="3"
                    android:nextFocusForward="@+id/f_campaign_minutes1"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="次/周"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_aimExerciseMins"
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:digits="0123456789"
                    android:inputType="number"
                    fu:maxByteLength="3"
                    android:nextFocusForward="@+id/d_e_main_food"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="分钟/次"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:orientation="horizontal" >

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_exerciseDurationWeeks"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="8"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="次/周"
                    android:textColor="#848484"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_exerciseDurationMins"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="10"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="分钟/次"
                    android:textColor="#848484"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:orientation="horizontal" >

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_aimDurationWeeks"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="8"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="次/周"
                    android:textColor="#848484"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_aimExerciseMins"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="10"
                    android:textSize="18sp" />

                <net.greatsoft.main.view.FuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="分钟/次"
                    android:textColor="#848484"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <net.greatsoft.main.view.FuTextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="摄盐量："
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_saltTakenLevel"
                    android:layout_width="200dip"
                    android:layout_height="30dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_saltTakenLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_aimSalttakenLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_aimSalttakenLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <net.greatsoft.main.view.FuTextView
                style="@style/text_diahy"
                android:text="主食(克/天)" />

            <net.greatsoft.main.view.FuEditText
                android:id="@+id/et_dailyStaple"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:digits="0123456789"
                android:inputType="number"
                fu:maxByteLength="4"
                android:nextFocusForward="@+id/d_e_main_food1"
                android:textSize="18sp" />

            <net.greatsoft.main.view.FuTextView
                android:layout_width="30dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=" / "
                android:textSize="18sp" />

            <net.greatsoft.main.view.FuEditText
                android:id="@+id/et_aimDailyStaple"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:digits="0123456789"
                android:inputType="number"
                fu:maxByteLength="4"
                android:textSize="18sp" />

            <net.greatsoft.main.view.FuTextView
                android:id="@+id/tv_o_dailyStaple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="18sp" />

            <net.greatsoft.main.view.FuTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=" / "
                android:textSize="18sp" />

            <net.greatsoft.main.view.FuTextView
                android:id="@+id/tv_o_aimDailyStaple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <net.greatsoft.main.view.FuTextView
            style="@style/text_style5"
            android:text="心理调整"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ll_psyAdjustResult"
            android:layout_width="200dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:orientation="horizontal" >
        </LinearLayout>

        <net.greatsoft.main.view.FuTextView
            android:id="@+id/tv_o_psyAdjustResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <net.greatsoft.main.view.FuTextView
            style="@style/text_style5"
            android:text="遵医行为"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ll_complianceResult"
            android:layout_width="200dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:orientation="horizontal" >
        </LinearLayout>

        <net.greatsoft.main.view.FuTextView
            android:id="@+id/tv_o_complianceResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:enabled="false" />
    </LinearLayout>

    <net.greatsoft.main.view.FuButton
        android:id="@+id/btn_next"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:background="@mipmap/login_button"
        android:text="下一步"
        android:textColor="#fff" />

</LinearLayout>