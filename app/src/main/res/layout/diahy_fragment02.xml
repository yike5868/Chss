<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFF0"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingTop="10dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.greatsoft.main.view.FuTextView
            style="@style/text_diahy"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="血压（mmHg）*:" />

        <net.greatsoft.main.view.FuEditText
            android:id="@+id/et_sbp"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:inputType="number"
            fu:maxByteLength="3" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="/"
            android:textSize="29sp" />

        <net.greatsoft.main.view.FuEditText
            android:id="@+id/et_dbp"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:nextFocusForward="@+id/et_xl"
            fu:maxByteLength="3" />

        <net.greatsoft.main.view.FuTextView
            android:id="@+id/tv_o_sbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:text="156"
            android:textSize="20sp" />

        <net.greatsoft.main.view.FuTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:text="/"
            android:textSize="20sp" />

        <net.greatsoft.main.view.FuTextView
            android:id="@+id/tv_o_dbp"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:text="102"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="20dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal">

                <net.greatsoft.main.view.FuTextView
                    style="@style/text_diahy"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="心率（次/分钟）*: " />

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_heartRate"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:nextFocusForward="@+id/et_sg"
                    fu:maxByteLength="3" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_heartRate"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:text="80"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal">

                <net.greatsoft.main.view.FuTextView
                    style="@style/text_diahy"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="身高（cm）*: " />

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_height"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:digits="0123456789."
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:nextFocusForward="@+id/et_tz"
                    fu:maxByteLength="4,1" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_height"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:text="179"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal">

                <net.greatsoft.main.view.FuTextView
                    style="@style/text_diahy"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="体重（kg）*: " />

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_weight"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:digits="0123456789."
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:nextFocusForward="@+id/et_yw"
                    fu:maxByteLength="4,1" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_weight"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:text="70"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:visibility="gone">

                <net.greatsoft.main.view.FuTextView
                    style="@style/text_diahy"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="腰围（cm）: " />

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_waist"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:digits="0123456789."
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:nextFocusForward="@+id/et_kf"
                    fu:maxByteLength="4,1" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_waist"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:text="110"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal">

                <net.greatsoft.main.view.FuTextView
                    style="@style/text_diahy"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="空腹血糖值*: " />

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_fbg"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:digits="0123456789."
                    android:inputType="number"
                    fu:maxByteLength="3,1"
                    android:nextFocusForward="@+id/et_fbg" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_fbg"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="20dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <net.greatsoft.main.view.FuTextView
                android:id="@+id/tv_tzkg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="体质指数（kg/m²）"
                android:textColor="#038B52"
                android:textSize="30sp" />

            <net.greatsoft.main.view.FuTextView
                android:id="@+id/tv_bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="24"
                android:textColor="#038B52"
                android:textSize="30sp" />

            <net.greatsoft.main.view.FuTextView
                android:id="@+id/tv_body_mass_indexCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text=""
                android:textColor="#038B52"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <net.greatsoft.main.view.FuTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="过轻：低于18.5"
                        android:textSize="16sp" />

                    <net.greatsoft.main.view.FuTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="正常：18.5-24.99" />

                    <net.greatsoft.main.view.FuTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="过重：25-28" />

                    <net.greatsoft.main.view.FuTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="肥胖：28-32" />

                    <net.greatsoft.main.view.FuTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="非常肥胖：高于32" />
                </LinearLayout>

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dip"
                    android:text="24"
                    android:textSize="30sp" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_body_mass_indexCN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="正常"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal">

                <net.greatsoft.main.view.FuTextView
                    style="@style/text_diahy"
                    android:gravity="center"
                    android:text="糖化血红蛋白" />

                <net.greatsoft.main.view.FuEditText
                    android:id="@+id/et_ghb"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:digits="0123456789."
                    android:inputType="number"
                    fu:maxByteLength="4,1" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_o_ghb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:enabled="false"
                    android:text="7.2"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <net.greatsoft.main.view.FuTextView
                    style="@style/text_diahy"
                    android:gravity="center"
                    android:text="检查时间" />

                <net.greatsoft.main.view.FuTextView
                    android:id="@+id/tv_ghbDate"
                    android:layout_width="120dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/textback"
                    android:gravity="center"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <net.greatsoft.main.view.FuButton
        android:id="@+id/btn_next"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:background="@mipmap/login_button"
        android:text="下一步"
        android:textColor="#fff" />

</LinearLayout>